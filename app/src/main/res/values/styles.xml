<resources>
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainBackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MainLogo">
        <item name="android:layout_width">474dp</item>
        <item name="android:layout_height">311dp</item>
        <item name="android:layout_marginTop">@dimen/startScreenSpacing</item>
        <item name="android:layout_marginLeft">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
    </style>

    <style name="MainHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/selectionHeadingMargin</item>
        <item name="android:layout_marginEnd">@dimen/selectionHeadingMargin</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:shadowColor">#CD222222</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">@font/galderglynn_titling_bd</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/headingTextSize</item>
    </style>

    <style name="StartScreenContinueButton">
        <item name="android:layout_width">132dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_below">@id/logo</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/startScreenSpacing</item>
    </style>

    <style name="StepperIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginBottom">@dimen/doubleSpacing</item>
        <item name="android:layout_marginStart">@dimen/standardSpacing</item>
        <item name="android:layout_marginEnd">@dimen/standardSpacing</item>
    </style>

    <style name="QuestionImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_below">@id/main_heading</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/doubleSpacing</item>
        <item name="android:layout_marginRight">@dimen/doubleSpacing</item>
    </style>

    <style name="Question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/doubleSpacing</item>
        <item name="android:layout_marginRight">@dimen/doubleSpacing</item>
        <item name="android:layout_below">@id/question_image</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AnswersRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginLeft">@dimen/doubleSpacing</item>
        <item name="android:layout_marginRight">@dimen/doubleSpacing</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="AnswersCheckboxGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginLeft">@dimen/doubleSpacing</item>
        <item name="android:layout_marginRight">@dimen/doubleSpacing</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CheckboxAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TextAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginLeft">@dimen/doubleSpacing</item>
        <item name="android:layout_marginRight">@dimen/doubleSpacing</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColorHint">#88FFFFFF</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="NextPlayerContinue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/nextPlayerContinueMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/nextPlayerContinueMarginBottom</item>
        <item name="android:layout_marginLeft">@dimen/nextButtonHorizontalMargin</item>
        <item name="android:layout_marginRight">@dimen/nextButtonHorizontalMargin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/galderglynn_titling_bd</item>
        <item name="android:onClick">nextPlayerContinue</item>
        <item name="android:text">@string/next_player_continue</item>
        <item name="android:paddingLeft">@dimen/doubleSpacing</item>
        <item name="android:paddingRight">@dimen/doubleSpacing</item>
        <item name="android:textSize">@dimen/nextPlayerButtonTextSize</item>
    </style>

    <style name="NextQuestionContinue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/startScreenSpacing</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">@dimen/nextButtonHorizontalMargin</item>
        <item name="android:layout_marginRight">@dimen/nextButtonHorizontalMargin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/galderglynn_titling_bd</item>
        <item name="android:onClick">nextPlayerContinue</item>
        <item name="android:text">@string/next_player_continue</item>
        <item name="android:paddingLeft">@dimen/doubleSpacing</item>
        <item name="android:paddingRight">@dimen/doubleSpacing</item>
        <item name="android:textSize">@dimen/nextPlayerButtonTextSize</item>
    </style>

    <style name="NextPlayerCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginBottom">@dimen/standardSpacing</item>
        <item name="android:layout_marginLeft">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NextPlayerImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/next_player</item>
    </style>

    <style name="NextPlayerInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/nextPlayerMarginTop</item>
        <item name="android:layout_marginRight">@dimen/nextPlayerMarginTop</item>
        <item name="android:layout_marginLeft">@dimen/nextPlayerMarginTop</item>
        <item name="android:fontFamily">@font/galderglynn_titling_bd</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/nextPlayerShadowColor</item>
        <item name="android:shadowDx">@dimen/shadowOffset</item>
        <item name="android:shadowDy">@dimen/shadowOffset</item>
        <item name="android:shadowRadius">@dimen/shadowRadius</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/nextPlayerTextSize</item>
    </style>

    <style name="AnswersSummaryCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginBottom">@dimen/standardSpacing</item>
        <item name="android:layout_marginLeft">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AnswersSummaryImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/answers_summary</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AnswerIndicatorImage">
        <item name="android:layout_width">@dimen/doubleSpacing</item>
        <item name="android:layout_height">@dimen/doubleSpacing</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">@dimen/standardSpacing</item>
        <item name="android:layout_marginLeft">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
    </style>

    <style name="SummaryAnswerPlayerWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/standardSpacing</item>
        <item name="android:layout_marginBottom">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
    </style>

    <style name="SummaryAnswerPlayer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/standardSpacing</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="PlayerAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">@dimen/standardSpacing</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="WinnerInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/doubleSpacing</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PlayerScoreContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/doubleSpacing</item>
        <item name="android:paddingRight">@dimen/standardSpacing</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PlayerScoreLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PlayerPoints">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="QuestionExpandButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CD666666</item>
        <item name="android:layout_marginLeft">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
        <item name="android:layout_marginBottom">@dimen/standardSpacing</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/doubleSpacing</item>
        <item name="android:paddingRight">@dimen/doubleSpacing</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="QuestionAnswersSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:layout_marginLeft">@dimen/standardSpacing</item>
        <item name="android:layout_marginRight">@dimen/standardSpacing</item>
        <item name="android:layout_marginBottom">@dimen/standardSpacing</item>
    </style>

    <style name="SummaryAllAnsweredAnswersWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CDDDDDDD</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">@dimen/doubleSpacing</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SummaryAllAnsweredAnswers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="SummaryPlayerAnswers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CDFFFFFF</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="CorrectAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">@dimen/standardSpacing</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">@dimen/nextButtonHorizontalMargin</item>
        <item name="android:layout_marginRight">@dimen/nextButtonHorizontalMargin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/galderglynn_titling_bd</item>
        <item name="android:onClick">resetQuiz</item>
        <item name="android:text">@string/reset_button</item>
        <item name="android:paddingLeft">@dimen/doubleSpacing</item>
        <item name="android:paddingRight">@dimen/doubleSpacing</item>
        <item name="android:textSize">@dimen/nextPlayerButtonTextSize</item>
    </style>
</resources>

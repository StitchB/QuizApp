<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    tools:context=".StartScreenActivity">

    <!-- Main background -->
    <ImageView
        android:id="@+id/background"
        style="@style/MainBackground"
        android:contentDescription="@string/background"
        android:src="@drawable/bg" />

    <!-- Main Logo -->
    <ImageView
        android:id="@+id/logo"
        style="@style/MainLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo" />

    <!-- Button for continuing to first character selection -->
    <ImageButton
        android:id="@+id/button_continue"
        style="@style/StartScreenContinueButton"
        android:contentDescription="@string/continue_button"
        android:src="@drawable/selector_continue_button" />

</RelativeLayout>